#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global
    log         127.0.0.1 local2
    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     4000
    user        haproxy
    group       haproxy
    daemon
    stats socket /var/lib/haproxy/stats
    tune.ssl.default-dh-param 2048

#---------------------------------------------------------------------
# common defaults that all the 'listen' and 'backend' sections will
# use if not designated in their block
#---------------------------------------------------------------------
defaults
    mode                    http
    log                     global
    option                  dontlognull
    option                  redispatch
    retries                 3
    timeout queue           1m
    timeout connect         10s
    timeout client          30s
    timeout server          30s
    timeout check           10s

#---------------------------------------------------------------------
# main frontend which proxys to the backends
#---------------------------------------------------------------------
frontend  main
    bind                    *:{{ haproxy_listen_port }} {{ 'ssl crt /etc/haproxy/cert/server.pem' if haproxy_ssl_on }}
    option                  forwardfor
    reqadd                  X-Forwarded-Proto:\ {{ 'https' if haproxy_ssl_on else 'http' }}
    default_backend         default

#---------------------------------------------------------------------
# round robin balancing between the various backends
#---------------------------------------------------------------------
backend default
    balance roundrobin
{% for server in haproxy_backend_servers %}
    server  server_{{ loop.index }} {{ server }} {{ 'send-proxy' if use_proxy_protocol }} check
{% endfor %}
